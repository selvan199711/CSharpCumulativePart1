@model IEnumerable<CSharpCumulativePart2.Models.Teacher>

<h2>All Teachers</h2>

<form method="get" asp-action="List">
    <label>Start Date:</label>
    <input type="date" name="startDate" />

    <label>End Date:</label>
    <input type="date" name="endDate" />

    <button type="submit">Search</button>
</form>

<table>
    <tr><th>First</th><th>Last</th><th>Hire Date</th><th>Salary</th></tr>
    @foreach (var teacher in Model)
    {
        <tr>
            <td>@teacher.FirstName</td>
            <td>@teacher.LastName</td>
            <td>@teacher.LastName</td>
            <td>@teacher.HireDate.ToShortDateString()</td>
            <td>$@teacher.Salary.ToString("N2")</td>
        </tr>
    }
</table>

@if (!Model.Any())
{
    <p>No teachers found in this date range.</p>
}


<style>
    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 15px;
    }
    th, td {
        padding: 10px;
        border: 1px solid #ddd;
    }
    th {
        background-color: #f0f0f0;
    }
    h2 {
        color: #2e6da4;
    }
</style>
